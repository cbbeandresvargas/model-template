<Layout title="Valentina Arce - Galería">
    <section class="gallery">
        <Sidebar />

        <div class="content-page gallery-content gallery-wrap">
            <div class="content-inner">
                <div class="title-wrapper text-center">
                    <h2 class="title">Galería</h2>
                    <div class="subtitle">
                        <p>
                            Explora mi portafolio de modelaje, donde cada imagen
                            cuenta una historia y expresa una visión única.
                            Descubre la versatilidad y pasión en cada proyecto.
                        </p>
                    </div>
                </div>

                <div class="album-tab">
                    <a href="#album-moda-editorial" class="is-active"
                        >Moda Editorial</a
                    >
                    <a href="#album-retratos">Retratos</a>
                    <a href="#album-pasarela">Pasarela</a>
                    <a href="#album-belleza">Belleza</a>
                </div>

                <div class="grid-album is-active" id="album-moda-editorial">
                    <div class="grid-sizer"></div>
                    {
                        albums["moda-editorial"].map((item) => (
                            <div class="grid-item album-item">
                                <a href="/gallery-single">
                                    <div class="album-thumb">
                                        <img
                                            src={item.img}
                                            data-src={item.img}
                                            class="b-lazy"
                                            alt={item.title}
                                        />
                                    </div>
                                    <div class="album-name">{item.title}</div>
                                    <div class="album-desc">{item.desc}</div>
                                </a>
                            </div>
                        ))
                    }
                </div>

                <div class="grid-album" id="album-retratos">
                    <div class="grid-sizer"></div>
                    {
                        albums["retratos"].map((item) => (
                            <div class="grid-item album-item">
